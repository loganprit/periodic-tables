{
  "name": "periodic-tables-back-end",
  "version": "1.0.0",
  "description": "Periodic Tables backend",
  "main": "src/server.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/loganprit/periodic-tables",
    "directory": "/back-end"
  },
  "scripts": {
    "start": "ts-node src/server.ts",
    "start:dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc && cp src/db/seeds/*.json build/src/db/seeds/",
    "test": "jest --config ./test/jest.config.js --runInBand --detectOpenHandles --forceExit",
    "test:1": "npm run test -- us-01",
    "test:2": "npm run test -- us-02",
    "test:3": "npm run test -- us-03",
    "test:4": "npm run test -- us-04",
    "test:5": "npm run test -- us-05",
    "test:6": "npm run test -- us-06",
    "test:7": "npm run test -- us-07",
    "test:8": "npm run test -- us-08",
    "test:drop-database": "node test/drop-database",
    "test:start": "npx cross-env LOG_LEVEL=warn NODE_ENV=test npm run test:start:run",
    "test:start:run": "run-s test:drop-database start ",
    "migrate": "ts-node ./node_modules/.bin/knex migrate:latest"
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "knex": "^3.1.0",
    "nanoid": "^5.0.8",
    "npm-run-all": "^4.1.5",
    "pg": "^8.13.1",
    "pino": "^9.5.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^11.3.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/knex": "^0.16.1",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.8.6",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsconfig-paths": "^4.2.0"
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
